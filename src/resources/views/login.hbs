<div class="login">
            <form action="/login" class="sign-form" method="post">
                <div class="login-title">
                    <h1>Login</h1>
                </div>
                <div class="login-input">
                    <div class="login-input1">
                        <input class="special" type="text" name="username" placeholder="USERNAME"/>
                    </div>
                    <div class="login-input1">
                        <input class="special" type="password" name="password" placeholder="PASSWORD"/>
                    </div>
                </div>
                <div class="login-suggestion">
                    <a href="/register">Need an account?</a>
                </div>
                <div class="login-submit">
                    <button class="login-submit-btn" type="submit">Login</button>
                </div>
            </form>
        </div>